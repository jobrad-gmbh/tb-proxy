[Unit]
After=docker.service
BindsTo=docker.service
Conflicts=shutdown.target reboot.target halt.target
Description=HTTP proxy server.

[Service]
ExecStartPre=-/usr/bin/env docker-compose --compatibility --file service/docker/production.yaml kill $APP
ExecStartPre=-/usr/bin/env docker-compose --compatibility --file service/docker/production.yaml rm --force $APP
ExecStart=/usr/bin/env docker-compose --compatibility --file service/docker/production.yaml up --force-recreate --no-build --no-deps $APP
ExecStop=/usr/bin/env docker-compose --compatibility --file service/docker/production.yaml stop $APP
NotifyAccess=all
Restart=always
RestartSec=10
User=service
WorkingDirectory=/srv/http/proxy

[Install]
WantedBy=multi-user.target
